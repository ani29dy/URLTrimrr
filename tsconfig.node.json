{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  